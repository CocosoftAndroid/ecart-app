<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/product_img_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                />
            <CheckBox
                android:id="@+id/fav_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:layout_margin="@dimen/dp20"
                android:background="@null"
                android:button="@drawable/fav_cbox_selector"

                android:paddingLeft="@dimen/dp5"
                android:text=""
                android:textAppearance="?android:textAppearanceSmall" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5">

            <TextView
                android:id="@+id/product_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/product_price_txt"
                android:lines="1"
                android:padding="@dimen/dp5"
                android:text=""
                android:textSize="24sp"
                android:textColor="@color/grey_2a"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/product_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:lines="1"
                android:padding="@dimen/dp5"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/product_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:lines="5"
            android:padding="@dimen/dp5"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/black"
            android:scrollHorizontally="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp20"
            android:layout_gravity="end"
            android:padding="@dimen/dp5"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/minus_img_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus_circle" />

            <TextView
                android:id="@+id/count_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:text="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/plus_img_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus_circle" />
        </LinearLayout>


        <Button
            android:id="@+id/wishlist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/btn_bg"
            android:enabled="false"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="Add Wishlist"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/addcart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:background="@drawable/btnbg"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="Add to Cart"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

    </LinearLayout>
</ScrollView>