<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_fog" />

        <TextView
            android:id="@+id/productname_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:text="Fog Perfume"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/productprice_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp10"
            android:text="20 $"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/grey_15" />

        <TextView
            android:id="@+id/productdesc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:text="Natural Honey Facial Cleansing Bar â€“ Enriched with natural herbal extracts. Remove dirt and impurities from your sensitive skin with our all-natural Cleansing Bar."
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/add_wish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/custombutton"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Add To Wishlist"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
