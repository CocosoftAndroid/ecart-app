<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:padding="@dimen/dp10"
            android:text="Welcome"
            android:textColor="@color/grey_69"
            android:textSize="38sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp15"
            android:padding="@dimen/dp15"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/username_etxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:background="@drawable/input_button"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/dp10"
            android:hint="User Name"
            android:lines="1"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/pwd_etxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:background="@drawable/input_button"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/dp10"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:padding="@dimen/dp10" />

        <TextView
            android:id="@+id/warning_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dp10"
            android:text="Warning"
            android:textColor="@color/red"
            android:textSize="@dimen/sp12"
            android:textStyle="italic"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_admin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp28"
                android:layout_weight="1"
                android:gravity=""
                android:text="Admin"
                android:textAppearance="?android:textAppearanceMedium" />

            <ImageView
                android:id="@+id/settings_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp28"
                android:layout_weight="1"
                android:src="@drawable/ic_setting" />
        </LinearLayout>


        <TextView
            android:id="@+id/login_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:layout_marginTop="12dp"
            android:background="@drawable/buttons"
            android:gravity="center"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:text="Log In"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/signup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp20"
            android:text="Not a user? SignUp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/guest_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp5"
            android:text="Login As Guest"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>