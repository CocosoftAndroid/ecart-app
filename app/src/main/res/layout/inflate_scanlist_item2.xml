<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="@dimen/dp5"
    card_view:contentPadding="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_imgborder"
            android:padding="@dimen/dp2"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/price_txt"
                    android:maxLines="1"
                    android:padding="@dimen/dp5"
                    android:text="Dove Soap"
                    android:layout_centerVertical="true"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/grey_2a" />

                <TextView
                    android:id="@+id/price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:padding="@dimen/dp5"
                    android:text="$25"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:maxLines="2"
                android:paddingLeft="@dimen/dp5"
                android:text="This soap comes with natural herbal ingredients which can be used all age people"
                android:layout_centerVertical="true"

                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey_2a" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>